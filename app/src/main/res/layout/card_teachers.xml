<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="60dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="50dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:paddingRight="10dp"
                android:paddingEnd="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <RelativeLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txtQualH"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Qualification: "
                            android:textAllCaps="false"
                            android:textSize="17sp"/>
                        <TextView
                            android:id="@+id/txtQual"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:text="M.S. (Computer Science)"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/txtQualH"
                            android:layout_toEndOf="@+id/txtQualH" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txtInstH"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Institute: "
                            android:textAllCaps="false"
                            android:textSize="17sp"/>
                        <TextView
                            android:id="@+id/txtInst"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:text="SZABIST"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/txtInstH"
                            android:layout_toEndOf="@+id/txtInstH" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txtSubH"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subject: "
                            android:textAllCaps="false"
                            android:textSize="17sp"/>
                        <TextView
                            android:id="@+id/txtSub"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:text="Physics"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/txtSubH"
                            android:layout_toEndOf="@+id/txtSubH" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txtEmailH"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email ID: "
                            android:textAllCaps="false"
                            android:textSize="17sp"/>
                        <TextView
                            android:id="@+id/txtEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17sp"
                            android:text="atifata@hotmail.com"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/txtEmailH"
                            android:layout_toEndOf="@+id/txtEmailH" />
                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>




    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgTeacher"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/container"
        android:src="@drawable/empty_icon"
        app:civ_border_width="4dp"
        app:civ_border_color="#2A000000" />


    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:layout_marginBottom="10dp"
        android:text="Syed Atif Ata"
        android:layout_below="@+id/imgTeacher"
        android:layout_centerHorizontal="true" />

</RelativeLayout>