<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityTestMarksAndAttendance">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Test Marks and Attendance" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Spinner
            android:id="@+id/spnDate"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:padding="10dp"
            android:textSize="15sp"
            android:background="@drawable/shape_drop_down_spinner" />
        <EditText
            android:id="@+id/edtStudentId"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_margin="8dp"
            android:inputType="number"
            android:padding="10dp"
            android:textSize="15sp"
            android:background="@drawable/black_border"
            android:imeOptions="actionDone"
            android:hint="Enter Student ID"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnShowMarks"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:textAllCaps="false"
            android:text="Show Result"
            android:layout_gravity="center"
            android:background="@drawable/bg_button"
            android:textColor="#FFF"/>

        <Button
            android:id="@+id/btnShowAttendence"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_margin="8dp"
            android:textAllCaps="false"
            android:text="Show Attendance"
            android:layout_gravity="center"
            android:background="@drawable/bg_button"
            android:textColor="#FFF"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollAttendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <ListView
        android:id="@+id/lstMarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>


</LinearLayout>
